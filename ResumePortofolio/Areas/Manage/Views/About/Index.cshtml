@model List<About>
@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-controller="About" asp-action="Create">
        Create
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Address</th>
            <th scope="col">PhoneNumber</th>
            <th scope="col">Email</th>
            <th scope="col">Title</th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Adress</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>
                    @if (item.Title.Length > 30)
                    {
                        @(item.Title.Substring(0,30)+"...")
                    }
                    else
                    {
                        @item.Title
                    }
                </td>
                <td>
                    <a asp-controller="About" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">
                     Update
                    </a>
                    <a asp-controller="About" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger ">
                        Delete
                    </a>
                </td>

            </tr>
        }

    </tbody>
</table>
